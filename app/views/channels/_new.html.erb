<div class="create-ch-bg absolute w-full h-full top-0 bg-black bg-opacity-25 flex hidden justify-center items-center z-40">
  <div class=" create-ch-area px-6 py-4 bg-white shadow-2xl w-10/12 sm:w-1/3 h-1/3 rounded relative">
    <div class="flex justify-between items-center mb-5">
      <h5 class="font-bold text-2xl"><%= t(".create") %></h5>
      <button class="create-cancel-btn font-bold text-gray-600 focus:outline-none">X</button>
    </div>
    <p class="text-sm text-gray-600 mb-5 hidden sm:block"><%= t(".communicates") %></p>

    <%= form_with(model: channel, url:workspace_channels_path(workspace),method:'POST',local:true,class: "create-ch-form") do |f| %>
    <div class="field mb-5">
      <%= f.label :name, t(".name"), class: "font-bold" %>
      <%= f.text_field :name,placeholder:t(".name_placeholder"),autocomplete:"off",class:"search create-ch-input relative font-bold px-2 py-2 border border-gray-800 rounded block w-full placeholder-gray-600 focus:outline-none focus:shadow-outline" %>
      <span class="text-xs text-red-600 hidden error-span"> 此channel名稱已經存在 </span>
    </div>
    <div class="field mb-5">
      <%= f.label :description, t(".description"), class: "font-bold" %>
      <%= f.text_field :description,placeholder:t(".desc_placeholder"),autocomplete:"off",class:"search relative font-bold px-2 py-2 border border-gray-800 rounded block w-full placeholder-gray-600 focus:outline-none focus:shadow-outline" %>
      <span class="text-xs text-gray-600"><%= t(".about") %></span>
    </div>
    <%# 邀請表單 %>
    <div>
      <p class="font-bold"><%= t('.invite') %></p>
      <select name="channels[name][]" id="ws_user" multiple="true" style="width: 100%">
      </select>
    </div>
      <%= f.submit t("utilities.submit"),class:"cursor-not-allowed block font-bold text-gray-700 px-5 py-2 mt-3 ml-auto bg-gray-400 rounded focus:outline-none create-ch-submit",disabled: true%>
    <% end %>
  </div>
</div>

