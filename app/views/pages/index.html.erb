 <%# nav導覽列 %>
<div class="bg-white border-none sm:border-b border-gray-400">
  <nav class="container mx-auto py-3 flex items-center justify-between flex-wrap">
    <h1 class="w-full sm:w-1/4">
      <%= link_to image_pack_tag("media/images/Sladock_logo.png"),pages_path %>
    </h1>
    <div class="w-full sm:w-auto flex flex-col sm:flex-row items-center">
      <% if user_signed_in? %>
        <span class="indexBtn"><%= link_to 'TRY FOR FREE',workspaces_path%></span>
        <span class="indexBtn signoutBtn"><%= link_to 'SIGN OUT' ,destroy_user_session_path %></span>
      <% else %>
        <span class="indexBtn signinBtn"><%= link_to 'SIGN IN' ,new_user_session_path %></span>
        <span class="indexBtn "><%= link_to 'GET STRATED',login_pages_path %></span>
      <% end %>
    </div>
  </nav>
</div>
<%# Section-1 Slack is where work happens %>
<section class="py-20 bg-orange-100 hidden sm:block"> 
  <div class="container mx-auto grid grid-cols-5">
    <div class="col-span-2 flex items-center">
      <div class="text mr-16">
        <h3 class="text-6_2xl font-bold leading-tight">SlaDock is where magic happens</h2>
        <p class="text-lg mt-4 mb-8 light_gray">With channels in SlaDock, you and your team can work effectively.</p>
        <div class="btn-group mb-4">
          <button class="px-10 py-4 bg-sladock text-white rounded"><%= link_to 'GET STRATED' ,workspaces_path %></button>
        </div>
      </div>
    </div>
    <div class="col-span-3 flex items-center ">
      <%= link_to image_pack_tag("media/images/indexImg.jpg"),pages_path %>
    </div>
  </div>
</section>
<footer class="w-full hidden sm:block py-2 bg-light_gray ">
  <p class="text-center"> <i class="far fa-copyright"></i>2020 "SlaDock" All rights reserved.</p>
</footer>
