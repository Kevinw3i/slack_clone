<% if in_workspace? %>
<h1>Workspace名稱：<%= @workspace.name %></h1>
<%= link_to "創立聊天室", new_workspace_channels_path(@workspace.id) %>
  <h2>以下顯示在<%= @workspace.name %>所有的channels</h2>
<div>
  <% @workspace.channels.each do |channel| %>
  <div>
    <%= render "./shared/header" %>
    <div class="chatroom grid grid-cols-12">
      <div class="bg-light_sladock text-white col-span-2">
        <h1>Workspace名稱：<%= @workspace.name %></h1>
        <%= link_to "創立聊天室", new_workspace_channels_path(@workspace.id) %>
        <h2>以下顯示在<%= @workspace.name %>所有的channels</h2>
      <div>
        <% @workspace.channels.each do |channel| %>
          <div>
            <%= link_to channel.name, workspace_channel_path(workspace_id: @workspace.id, id: channel.id) %>
            <%= link_to "刪除聊天室", channel_path(channel.id), method: "delete", destroy_channel: channel.id, data:{confirm:"確定要刪除嗎？"} %>
            <%= link_to "加入聊天室", channel_users_channels_path(channel.id), method: "post", remote: true, add_channel: channel.id %>
            <%= link_to "離開聊天室", channel_users_channels_path(channel.id), method: "delete", remote: true, leave_channel: channel.id %>
          </div>
        <% end %>
      </div>
        <h2>以下顯示已加入的聊天室</h2>
          <div class="active-area">
            <% @joined_channel.each do |channel| %>
              <div class="active-channel" channel-id=<%= channel.channel_id %>  >
                <%= link_to channel.channel.name, workspace_channel_path(workspace_id: @workspace.id, id: channel.channel_id)%>
              </div>
            <% end %>
          </div>
          <div>
            <%= link_to "回首頁", root_path %>
          </div>
      </div>
      <div class=" col-span-10 border border-1">
      </div>  
    </div>
    <div class="chatroom grid grid-cols-12 h-10 border border-1 ">
      <div class="bg-light_sladock text-white col-span-2">
      </div>
      <div class=" col-span-10">
      </div>  
    </div>
  </div>
  <% end %>
<% else %>
  <h2>請先加入workspace</h2>
<% end %>
<%# button顯示 %>
<button class="invite-ws-btn h-8 w-8  rounded hover:bg-gray-100 hover:stroke-gray active:bg-gray-400 focus:outline-none">
  <%= inline_svg_pack_tag( "media/images/invite.svg" , class: "stroke-current text-gray-600 hover:stroke-gray") %>
</button>

<div class="add-people absolute w-full h-full top-0 bg-black bg-opacity-25 hidden flex justify-center items-center">
  <div class="px-6 py-4 bg-white shadow-2xl w-1/3 h-1/3 rounded relative">
    <div class="flex justify-between">
      <h5 class="font-bold">Add people</h5>
    <button class="invite-cancel-btn font-bold text-gray-600 focus:outline-none">X</button>
    </div>
    <span class="text-xs text-gray-600">#student</span>
    <%= form_with(model:@invitation,url:workspace_invitations_path(@workspace),method: 'POST',local: true) do |f| %>
      <%= f.text_field :receiver_email,placeholder:"Search by name or email",autocomplete:'off',class:"search relative font-bold px-2 py-2 mb-5 border border-gray-800 rounded block w-full placeholder-gray-600 focus:outline-none focus:shadow-outline" %>
      <div class="member-group hidden absolute top:0 bg-gray-100 py-2 inset-x-0 mx-5 border border-gray-500 rounded" >
      </div>
    <div class="text-right">
      <%= f.submit 'Done',class:"invite-btn cursor-pointer font-bold text-gray-700 px-5 py-2 mx-2 bg-gray-400 rounded focus:outline-none",disabled: true %>
    <% end %>
    </div>
  </div>
</div>

