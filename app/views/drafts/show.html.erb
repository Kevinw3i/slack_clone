<%= render "./shared/header" %>
<div class="chatroom flex">
  <%= render "./shared/leftbar", workspace: @workspace, 
                                 channels:  @channels,
                                 unread_msg_bol: @unread_msg_bol,
                                 unread_msg_count: @unread_msg_count %>
    <div class="flex flex-col flex-grow min-w-0 min-h-0">
      <%# 上方白色區塊顯示頻道名稱與邀請按鈕 %>
      <div class="box-border border-b border-gray-400 h-16 font-bold flex flex-col justify-center pl-3">
        Drafts
        <p class="count-draft text-xs text-gray-500"></p>
      </div>
      <%# 訊息區 %>
      <div class="draft-area break-all overflow-y-auto h-chat_full flex-grow border border-1 bg-gray-300">
      </div>
    </div>    

  <%= render './shared/right_info' %>
  <% if @channel %>
    <%= render './shared/invite_ch' %>
  <% end %>
</div>
<%= render './channels/new', channel: @new_channel %>
<%= render './profiles/edit.html.erb' %>

<%# 草考插入區塊 %>
<template id="draft-group">
  <div class="box relative">
    <a href="#" class="block bg-white rounded-lg my-5 mx-5 p-3 shadow-sm border hover:shadow-md">
      <div class="flex justify-between mb-2">
        <p class="font-bold">#channelID</p>
        <div>
          <span class="text-xs text-gray-500">time</span>
          <span class="text-xs text-light_pink font-bold">Drafts</span>
        </div>   
      </div>
      <p class="content text-sm">drafts</p>      
    </a>
    <div class="draft-des-group absolute top-15 right-3 bg-white rounded-lg border-2 z-10 shadow-sm
    hidden">
      <div class="flex items-center">
        <span class="draft-delete cursor-pointer hover:bg-gray-200 pl-2">
          <i class="far fa-trash-alt text-gray-700"></i>
        </span>
        <span>
          <a href="#" class="draft-edit hover:bg-gray-200 px-2">
            <i class="fas fa-pencil-alt text-gray-700"></i>
          </a>
        </span>
        <span class="hover:bg-gray-200 cursor-pointer pr-2">
          <i class="far fa-paper-plane text-gray-700"></i>
        </span>
      </div>
    </div>  
  </div>
</template>