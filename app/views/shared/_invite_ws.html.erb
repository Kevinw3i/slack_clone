<div class="add-people text-black absolute w-full h-full top-0 bg-black bg-opacity-25 hidden flex justify-center items-center z-40">
  <div class="px-6 py-4 bg-white shadow-2xl w-4/5 md:w-1/3 h-1/3 rounded relative">
    <div class="flex justify-between">
      <h5 class="font-bold text-xl"><%= t(".invite",name: @workspace.name) %></h5>
    <button class="invite-cancel-btn font-bold text-gray-600 focus:outline-none">X</button>
    </div>
    <span class="text-xs text-gray-600">#<%= @workspace.name %></span>
    <%= form_with(model:@invitation,url:workspace_invitations_path(@workspace),id:"invite-form",method: "POST",local: true) do |f| %>
      <%= f.text_field :receiver_email,placeholder:t(".placeholder"),autocomplete:"off",class:"search relative font-bold px-2 py-2 border border-gray-800 rounded block w-full placeholder-gray-600 focus:outline-none focus:shadow-outline" 
      %>
      <span class="text-xs text-gray-400">請輸入email格式(包含 @ 以及 . )</span>
      <div class="text-right">
        <%= f.submit t(".send"),class:"submit-btn font-bold text-gray-700 px-5 py-2 mx-2 bg-gray-400 rounded focus:outline-none cursor-not-allowed",disabled: true %>
      </div>
    <% end %>
  </div>
</div>